{
    "name": "Change user password",
    "request": {
        "method": "PUT",
        "path": "/v1/users/${userId}/password",
        "body": {
            "new": "my-new-password",
            "repeated": "my-new-password",
            "old": {
                "email": "my@email.com",
                "password": "my-secret-password"
            }
        },
        "useToken": true
    },
    "response": {
        "status": 200
    }
}